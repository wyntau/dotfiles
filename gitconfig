[core]
	editor = vim
[user]
	name = username
	email = username@example.com
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[diff]
	tool = Kaleidoscope
[difftool]
	prompt = false
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustExitCode = true
[mergetool]
	prompt = false
[merge]
	tool = Kaleidoscope
[alias]
	br = branch
	bra = branch --all
	brd = branch --delete
	brD = branch -D
	ci = commit
	ca = commit --all
	cam = commit --amend
	co = checkout  # branchName here
	cb = checkout -b  # new branchName here
	ct = checkout --track  # remote branchName here
	df = diff
	dft = difftool
	dfs = diff --stat
	dfc = diff --cached
	dfl = diff --name-only
	fh = fetch
	fhv = fetch --verbose
	lg = log --color --graph --pretty=format:'%C(yellow)%h%Creset -%C(red)%d%Creset %s %C(green)(%cr) %C(bold blue)<%an>%Creset' --date=local --abbrev-commit
# lg = log --all --graph --pretty=format:'%C(red)%h%Creset -%C(yellow)%d%Creset %s %C(green)(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	ll = log --color --graph --pretty=format:'%n%C(yellow)%s%d%n%C(bold white)<%an> %C(blue)%ar %C(red)(%ad)%n%Creset%C(green)%H'  --stat --topo-order  --decorate --date=local
	lp = log --color --graph --pretty=format:'%n%C(yellow)%s%d%n%C(bold white)<%an> %C(blue)%ar %C(red)(%ad)%n%Creset%C(green)%H'  --stat --topo-order  --decorate -p --date=local
	mg = merge --no-ff   # branchName here
	ps = push
	pl = pull
	plb = pull --rebase
	plv = pull --verbose
	st = status --short --branch
	unstage = reset HEAD --   # fileName here
	untohead = reset --hard HEAD    # !!caution!! all changes that not commited will be **lost**!!
	unto = reset --hard      # commitId here !!caution!! all changes *after* the commitId will be lost!!
[color]
	diff = auto
	status = auto
	branch = auto
	ui = auto
[push]
	default = simple
[http]
	postBuffer = 524288000
#	proxy = http://127.0.0.1:8087
[credential]
	helper = osxkeychain
