
set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()

" --> Vundle plugin
Plugin 'gmarik/Vundle.vim'

" source colorschemes
if filereadable(expand("~/.vimrc.bundles.colorschemes"))
  source ~/.vimrc.bundles.colorschemes
endif

" source vim-airline
if filereadable(expand("~/.vimrc.bundles.airline"))
  source ~/.vimrc.bundles.airline
endif

" source default plugins
if filereadable(expand("~/.vimrc.bundles.default"))
  source ~/.vimrc.bundles.default
endif

" source snippets plugin
if filereadable(expand("~/.vimrc.bundles.snippets"))
  source ~/.vimrc.bundles.snippets
endif

" source YouCompleteMe plugin
if filereadable(expand("~/.vimrc.bundles.ycm"))
  source ~/.vimrc.bundles.ycm
endif

" If user have own plugins, load them here
if filereadable(expand("~/.vimrc.bundles.local"))
  source ~/.vimrc.bundles.local
endif

call vundle#end()
