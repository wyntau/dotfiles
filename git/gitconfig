[core]
	editor = vim
[alias]

	# branch
	br = branch -vv
	bra = branch --all -vv
	brd = branch --delete
	brdd = branch --delete --force

	# commit
	ci = commit
	cia = commit --all
	cim = commit --amend
	cif = commit --fixup

	# checkout
	co = checkout
	cob = checkout -b
	cot = checkout --track

	# diff
	df = diff
	dfc = diff --cached
	dfn = diff --name-only
	dfs = diff --stat

	dft = difftool
	dftc = difftool --cached

	fc = fetch
	fct = fetch --tags
	fcp = fetch --prune
	fcpt = fetch --prune --tags

	git = !exec git

	lg = log --color --graph --date-order --pretty=format:'%C(magenta)%h %C(reset)-%C(auto)%d %C(reset)%s %C(bold blue)<%an> %C(reset)%C(green)%ar%C(cyan)(%ad)' --date=iso8601-strict
	ll = log --color --graph --date-order --pretty=format:'\
%C(auto)%d%C(yellow)%B%n\
%C(ul)Hash:%C(reset) %C(magenta)%H%n\
%C(ul)Author:%C(reset) %C(bold blue)%an<%ae> %C(reset)%C(green)%ar%C(cyan)(%ad)%n\
%C(ul)Committer:%C(reset) %C(bold blue)%cn<%ce> %C(reset)%C(green)%cr%C(cyan)(%cd)%n\
'  --stat --date=iso8601-strict
	lp = ll --patch

	# merge
	mg = merge
	mgn = merge --no-ff
	mgs = merge --squash
	mgt = mergetool

	pl = pull
	plr = pull --rebase

	rb = rebase
	rbc = rebase --continue
	rbs = rebase --skip

	st = status --short --branch

	throw = reset --hard HEAD
	unstage = reset --soft HEAD --   # fileName here
[color]
	diff = auto
	status = auto
	branch = auto
	ui = auto
[color "diff"]
	meta = yellow bold
	commit = magenta bold
	frag = cyan bold
	old = red bold
	new = green bold
	whitespace = red reverse
[push]
	default = simple
[http]
	postBuffer = 524288000
[oh-my-zsh]
	hide-dirty = 1
